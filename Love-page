<script>
    const canvas = document.getElementById('canvas');
    const ctx = canvas.getContext('2d');
    canvas.width = window.innerWidth;
    canvas.height = window.innerHeight;

    let particles = [];
    const colors = ['#ff0055', '#ff5e8e', '#ffffff', '#ffb3c1'];

    class Particle {
        constructor(x, y) {
            this.x = x || Math.random() * canvas.width;
            this.y = y || Math.random() * canvas.height;
            this.size = Math.random() * 15 + 5;
            this.speedX = Math.random() * 2 - 1;
            this.speedY = Math.random() * 2 - 1;
            this.color = colors[Math.floor(Math.random() * colors.length)];
            this.opacity = Math.random() * 0.5 + 0.2;
        }
        update() {
            this.x += this.speedX;
            this.y += this.speedY;
            if (this.x > canvas.width || this.x < 0) this.speedX *= -1;
            if (this.y > canvas.height || this.y < 0) this.speedY *= -1;
        }
        draw() {
            ctx.save();
            ctx.translate(this.x, this.y);
            ctx.globalAlpha = this.opacity;
            ctx.fillStyle = this.color;
            ctx.beginPath();
            // Ø±Ø³Ù… Ø´ÙƒÙ„ Ù‚Ù„Ø¨ Ø¨Ø¯Ù„Ø§Ù‹ Ù…Ù† Ø¯Ø§Ø¦Ø±Ø©
            ctx.moveTo(0, 0);
            ctx.bezierCurveTo(-this.size/2, -this.size/2, -this.size, this.size/3, 0, this.size);
            ctx.bezierCurveTo(this.size, this.size/3, this.size/2, -this.size/2, 0, 0);
            ctx.fill();
            ctx.restore();
        }
    }

    function init() {
        for (let i = 0; i < 100; i++) particles.push(new Particle());
    }

    function animate() {
        ctx.fillStyle = 'rgba(0, 0, 0, 0.1)';
        ctx.fillRect(0, 0, canvas.width, canvas.height);
        particles.forEach(p => { p.update(); p.draw(); });
        requestAnimationFrame(animate);
    }

    const start = new Date("November 21, 2024 00:00:00").getTime();
    setInterval(() => {
        const now = new Date().getTime();
        const diff = now - start;
        document.getElementById('days').innerText = Math.floor(diff / 86400000);
        document.getElementById('hours').innerText = Math.floor((diff % 86400000) / 3600000);
        document.getElementById('mins').innerText = Math.floor((diff % 3600000) / 60000);
        document.getElementById('secs').innerText = Math.floor((diff % 60000) / 1000);
    }, 1000);

    const messages = [
        "â¤ï¸Ø¨Ø­Ø¨Ùƒ ÙŠØ§ ÙƒØ±Ø§Ù…Ù„Ø§ÙŠØªÙŠ",
        "â¤ï¸Ø¨Ø­Ø¨Ùƒ ÙŠØ§ Ø¯Ù„ÙˆØ¹ Ø¨Ø§Ø¨ÙŠ",
        "â¤ï¸Ø±Ø¨Ù†Ø§ ÙŠØ®Ù„ÙŠÙƒÙŠ Ù„ÙŠØ§ ÙŠØ§ Ù‚Ù„Ø¨ÙŠ",
        "â¤ï¸Ø¨Ø¹Ø´Ù‚ ÙƒÙ„ ØªÙØµÙŠÙ„Ø© ÙÙŠÙƒÙŠ",
        "â¤ï¸Ø¨Ø­Ø¨Ùƒ ÙŠØ§ Ù…ÙˆØ²ØªÙŠ",
        "â¤ï¸Ù…Ø¹Ø§ÙƒÙŠ Ù„Ø¢Ø®Ø± Ø§Ù„Ø¹Ù…Ø± ÙŠØ§ Ø­Ø¨ÙŠØ¨ØªÙŠ",
        "ğŸ«‚Ù„Ù†Ø§ ÙÙŠ Ø§Ù„Ø­Ù„Ø§Ù„ Ù„Ù‚Ø§Ø¡"
    ];
    let msgIndex = 0;

    function boost() {
        for(let i=0; i<30; i++) particles.push(new Particle(window.innerWidth/2, window.innerHeight/2));
        msgIndex = (msgIndex + 1) % messages.length;
        document.getElementById('dynamic-text').innerText = messages[msgIndex];
        document.getElementById('main-name').style.transform = "scale(1.1)";
        setTimeout(() => document.getElementById('main-name').style.transform = "scale(1)", 500);
    }

    window.addEventListener('resize', () => {
        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;
    });

    init(); animate();
</script>
